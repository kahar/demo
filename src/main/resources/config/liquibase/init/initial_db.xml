<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_operation_table" author="rwojtkowiak">
        <createTable tableName="operation">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="arguments" type="VARCHAR(255)"/>
            <column name="type_of_operation" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_operation_id_seq" author="rwojtkowiak">
        <sql>
            CREATE SEQUENCE IF NOT EXISTS operation_id_seq;
        </sql>
    </changeSet>
</databaseChangeLog>
